<html>
 <head> 
<script>
function fun() {  
alert("Your Form has been submitted successfully.");  
}  
function validateForm() {
var student_name = document.forms["myForm"]["student_name"].value;
if(student_name == "") {
alert("Name must be filled out");
return false;
}

var rollno = document.forms["myForm"]["rollno"].value;
if(rollno == "") {
alert("Roll number must be filled out");
return false;
}

var gender = document.forms["myForm"]["gender"].value;
if(gender == "") {
alert("Gender must be selected");
return false;
}

var year = document.forms["myForm"]["year"].value;
if(year == "") {
alert("Year must be selected");
return false;
}

var department = document.forms["myForm"]["department"].value;
if(department == "") {
alert("Department must be selected");
return false;
}

var section = document.forms["myForm"]["section"].value;
if(section == "") {
alert("Section must be selected");
return false;
}

var mobile = document.forms["myForm"]["mobile"].value;
if(mobile == "") {
alert("Mobile number must be entered");
return false;
}

var email = document.forms["myForm"]["email"].value;
var atpos = email.indexOf("@");
var dotpos = email.lastIndexOf(".");
if (atpos<1 || dotpos<atpos+2 || dotpos+2>=email.length) {
alert("Not a valid e-mail address");
return false;
}

var address = document.forms["myForm"]["address"].value;
if(address == "") {
alert("Address must be entered");
return false;
}

var city = document.forms["myForm"]["city"].value;
if(city == "") {
alert("City must be entered");
return false;
}

var country = document.forms["myForm"]["country"].value;
if(country == "") {
alert("Country must be selected");
return false;
}

var pincode = document.forms["myForm"]["pincode"].value;
if(pincode == "") {
alert("Pincode must be entered");
return false;
}

return true;

}

</script> </head> <body> <form name="myForm" action="submit.php" onsubmit="return validateForm()" method="post">
